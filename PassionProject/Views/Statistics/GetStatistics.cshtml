@model List<PassionProject.Models.Statistic>
@{
    ViewBag.Title = "GetStatistics";
}

<div id="statisticsWrapper">
    <h2>Statistics</h2>

    <table id="statisticsTable">
        <thead>
            <tr>
                <th>Alphabet</th>
                <th>Success/Fail</th>
                <th>Number of pairs</th>
                <th>Number of fails</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stat in Model)
            {
                <tr>
                    <td>@(stat.AlphabetID == 1 ? "Hiragana" : "Katakana")</td>
                    <td>@(stat.Status == 1 ? "Success" : "Fail")</td>
                    <td>@stat.NumberOfPairs</td>
                    <td>@stat.NumberOfFailedPairs</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Statistics/DeleteConfirm" id="clearStats">Clear Statistics</a>
</div>
